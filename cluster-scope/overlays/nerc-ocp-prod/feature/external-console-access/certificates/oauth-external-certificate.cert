apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: oauth-external-certificate
spec:
  secretName: oauth-external-certificate
  duration: 2160h
  renewBefore: 360h
  isCA: false
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  usages:
    - server auth
    - client auth
  dnsNames:
    - oauth.apps.shift.nerc.mghpcc.org
  uris:
    - https://oauth.apps.shift.nerc.mghpcc.org
  issuerRef:
    name: nerc-external-apps-issuer
    kind: Issuer
